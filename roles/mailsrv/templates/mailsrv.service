[Unit]
Description=Lightweigt mail-handling server
After=network.target network-online.target
 
[Service]
User=aleak
Group=aleak

Type=forking
Restart=on-abort

PIDFile=/tmp/mailsrv.pid

WorkingDirectory=/home/aleak/g/pdev_util/bin

ExecStartPre=source /home/aleak/.bashrc
ExecStart=/home/aleak/g/pdev_util/bin/mailsrv
 
[Install]
WantedBy=multi-user.target
